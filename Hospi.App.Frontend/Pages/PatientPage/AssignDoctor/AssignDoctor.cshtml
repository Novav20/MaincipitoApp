@page
@model Hospi.App.Frontend.Pages.PatientPage.AssignDoctorModel
@{
    ViewData["Title"] = "Asignar Médico";
}
<h1>@ViewData["Title"]</h1>
<h4>@Model.Patient.Name @Model.Patient.Surname</h4>
<hr />
<table class="table">
    <thead class="thead-light">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Doctors[0].Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Doctors[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Doctors[0].Surname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Doctors[0].MedicalSpecialty)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Doctors)
        {
            <tr style="text-align: auto;">
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Surname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MedicalSpecialty)
                </td>
                <td>
                    <form method="post">
                        <input type="hidden" asp-for="patientId" value="@Model.Patient.Id">
                        <input type="hidden" asp-for="doctorId" value="@item.Id">
                        <input type="submit" value="Asignar" class="btn btn-primary" />
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>