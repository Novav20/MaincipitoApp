@page "{SearchString?}"
@model Hospi.App.Frontend.Pages.PatientPage.IndexModel

@{
    ViewData["Title"] = "Pacientes Registrados";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-page="Create">Registrar nuevo paciente</a>
</p>
<form>
    <div class="row g-3">
        <div class="col-auto">
            <input type="text"  readonly class="form-control-plaintext" value="Nombre del paciente">
        </div>
        <div class="col-auto">
            <input  asp-for="SearchString" type="text"  class="form-control">
        </div>
        <div class="col-auto">
            <input type="submit" value="Filtrar" class="btn btn-primary mb-3">
        </div>
    </div>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Patient[0].Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Patient[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Patient[0].Surname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Patient[0].Cellphone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Patient[0].Address)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Patient) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Surname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cellphone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Editar</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Detalles</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Borrar</a>
            </td>
        </tr>
}
    </tbody>
</table>
