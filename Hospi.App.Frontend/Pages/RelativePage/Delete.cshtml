@page
@model Hospi.App.Frontend.Pages.RelativePage.DeleteModel

@{
    ViewData["Title"] = "Borrar datos del familiar";
}

<h1>@ViewData["Title"]</h1>

<h3>¿Está seguro que desea eliminar este recurso?</h3>
<div>
    <h4>@Model.Relative.Name @Model.Relative.Surname</h4>
    <hr />
    <dl class="row">
         <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Relative.Id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Relative.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Relative.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Relative.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Relative.Surname)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Relative.Surname)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Relative.Cellphone)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Relative.Cellphone)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Relative.Genre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Relative.Genre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Relative.Relationship)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Relative.Relationship)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Relative.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Relative.Email)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Relative.Id" />
        <input type="submit" value="Borrar" class="btn btn-danger" /> |
        <a asp-page="./Index">Volver al listado de familiares</a>
    </form>
</div>
