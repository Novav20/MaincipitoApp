@page
@model Hospi.App.Frontend.Pages.RelativePage.IndexModel


@{
    ViewData["Title"] = "Familiares Registrados";
}

<h1>@ViewData["Title"]</h1>
<table class="table">
    <thead class="thead-light">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Relative[0].Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Relative[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Relative[0].Surname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Relative[0].Relationship)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Relative) {
        <tr style="text-align: auto;">
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Surname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Relationship)
            </td>
            <td>
                <a class="btn btn-outline-warning" asp-page="./Edit" asp-route-id="@item.Id">Editar</a> |
                <a class="btn btn-outline-success" asp-page="./Details" asp-route-id="@item.Id">Detalles</a> |
                <a class="btn btn-outline-danger" asp-page="./Delete" asp-route-id="@item.Id">Borrar</a>
            </td>
        </tr>
}
    </tbody>
</table>
