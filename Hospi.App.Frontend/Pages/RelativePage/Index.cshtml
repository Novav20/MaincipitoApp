@page
@model Hospi.App.Frontend.Pages.RelativePage.IndexModel


@{
    ViewData["Title"] = "Familiares Registrados";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-page="Create">Registrar nuevo familiar</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Relative[0].Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Relative[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Relative[0].Surname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Relative[0].Relationship)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Relative) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Surname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Relationship)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Editar</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Detalles</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Borrar</a>
            </td>
        </tr>
}
    </tbody>
</table>
